<!DOCTYPE html>
<html>
  <head>
    <title>TravelJournal</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <% flash.each do |message, message_type| %>
        <div class="alert alert-<%= messsage_type%>"><%= message %></div>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
