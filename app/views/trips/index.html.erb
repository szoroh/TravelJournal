<h4>Older posts</h4>
<table class="ui celled table">
  <thead>
    <tr>
      <th>Date</th>
      <th>City</th>
      <th>Temperature</th>
      <th>Note</th>
      <%# <th>Edit</th> %>
      <th>Delete</th>
    </tr>
  </thead>
  <% @users_trips.each do |trip| %>
    <tbody>
      <tr>
        <td><%= trip.created_at.strftime("%d-%m-%Y")%></td>
        <td><%= trip.city.name.capitalize %></td>
        <td><%= trip.weather.temperature %></td>
        <td><%= trip.note %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %>
        <td><%= link_to 'Delete', trip_path(trip), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %></td>
      </tr>
    </tbody>
  <% end %>
</table>
